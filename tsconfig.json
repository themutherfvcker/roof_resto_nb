{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": { },
    "@/*": ["*"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
